---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us — Southern Winds Hospital" hideFooterCta>

  <section class="page-hero">
    <div class="page-hero__bg">
      <img src="/images/admissions-hero.png" alt="" loading="eager" />
    </div>
    <div class="page-hero__diagonal"></div>
    <div class="page-hero__curve"></div>
    <div class="page-hero__inner">
      <div class="page-hero__content">
        <h1 class="page-hero__heading">Contact Us</h1>
        <nav class="page-hero__breadcrumb" aria-label="Breadcrumb">
          <a href="/">Home</a>
          <span>/</span>
          <span aria-current="page">Contact Us</span>
        </nav>
      </div>
    </div>
  </section>

  <section class="contact-intro">
    <div class="contact-intro__inner">
      <h2 class="contact-intro__heading">We're Here To Help</h2>
      <p class="contact-intro__text">Taking the first step toward mental health care can feel overwhelming. Our compassionate team is available 24/7 to answer your questions, discuss treatment options, and guide you through the admissions process. You don't have to face this alone.</p>
    </div>
  </section>

  <section class="contact-info">
    <div class="contact-info__inner">
      <h2 class="contact-info__section-heading">Call Us Directly</h2>
      <div class="contact-info__phone-grid">
        <div class="phone-card phone-card--admissions">
          <div class="phone-card__badge">24/7</div>
          <div class="phone-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
          </div>
          <h3 class="phone-card__title">Admissions</h3>
          <p class="phone-card__desc">New patient intake, insurance verification, and admissions questions.</p>
          <a href="tel:7868267552" class="phone-card__number">(786) 826-7552</a>
          <p class="phone-card__availability">Available around the clock</p>
        </div>

        <div class="phone-card phone-card--medical">
          <div class="phone-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
          </div>
          <h3 class="phone-card__title">Medical</h3>
          <p class="phone-card__desc">Clinical questions, medical records, and patient care coordination.</p>
          <a href="tel:7868267553" class="phone-card__number">(786) 826-7553</a>
          <p class="phone-card__availability">Mon–Fri, 8:00 AM – 5:00 PM</p>
        </div>

        <div class="phone-card phone-card--sales">
          <div class="phone-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          </div>
          <h3 class="phone-card__title">Sales &amp; Partnerships</h3>
          <p class="phone-card__desc">Referral partnerships, facility tours, and business development.</p>
          <a href="tel:7868267554" class="phone-card__number">(786) 826-7554</a>
          <p class="phone-card__availability">Mon–Fri, 9:00 AM – 6:00 PM</p>
        </div>
      </div>

      <div class="contact-info__other-grid">
        <div class="contact-card">
          <div class="contact-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
          </div>
          <h3 class="contact-card__title">Email Us</h3>
          <p class="contact-card__subtitle">General Inquiries</p>
          <a href="mailto:info@southernwindshospital.com" class="contact-card__link">info@southernwindshospital.com</a>
          <p class="contact-card__note">We typically respond within 24 business hours.</p>
        </div>

        <div class="contact-card">
          <div class="contact-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
          </div>
          <h3 class="contact-card__title">Visit Us</h3>
          <p class="contact-card__subtitle">Main Campus</p>
          <address class="contact-card__address">
            4225 W 20th Ave<br />
            Hialeah, FL 33012
          </address>
          <p class="contact-card__note">Visitor hours: 9:00 AM – 8:00 PM daily.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="map-section">
    <div class="map-section__inner">
      <h2 class="map-section__heading">Our Location</h2>
      <div class="map-section__container">
        <div class="map-section__map">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3590.5!2d-80.3!3d25.85!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjXCsDUxJzAwLjAiTiA4MMKwMTgnMDAuMCJX!5e0!3m2!1sen!2sus!4v1234567890"
            width="100%"
            height="400"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Southern Winds Hospital Location">
          </iframe>
        </div>
        <div class="map-section__details">
          <h3 class="map-section__details-title">Getting Here</h3>
          <div class="map-section__detail">
            <strong>By Car:</strong>
            <p>Located just off Palmetto Expressway (SR 826), take exit 12 toward W 20th Ave. Free parking is available on-site.</p>
          </div>
          <div class="map-section__detail">
            <strong>By Public Transit:</strong>
            <p>Miami-Dade Transit routes 37 and 51 stop within walking distance of our facility.</p>
          </div>
          <div class="map-section__detail">
            <strong>From Miami International Airport:</strong>
            <p>Approximately 15 minutes via FL-112 W and Palmetto Expressway.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="hours-section">
    <div class="hours-section__inner">
      <div class="hours-card">
        <h3 class="hours-card__title">Hours of Operation</h3>
        <div class="hours-card__grid">
          <div class="hours-card__item">
            <span class="hours-card__label">Admissions</span>
            <span class="hours-card__value">24/7</span>
          </div>
          <div class="hours-card__item">
            <span class="hours-card__label">Visiting Hours</span>
            <span class="hours-card__value">9:00 AM – 8:00 PM</span>
          </div>
          <div class="hours-card__item">
            <span class="hours-card__label">Administration</span>
            <span class="hours-card__value">Mon–Fri, 8:00 AM – 5:00 PM</span>
          </div>
          <div class="hours-card__item">
            <span class="hours-card__label">Outpatient Services</span>
            <span class="hours-card__value">Mon–Fri, 7:00 AM – 7:00 PM</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="cta-section__inner">
      <h2 class="cta-section__heading">Ready to Take the First Step?</h2>
      <p class="cta-section__text">Call our 24/7 admissions line now. Help is just a phone call away.</p>
      <a href="tel:7868267552" class="cta-section__btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
        Call (786) 826-7552
      </a>
    </div>
  </section>

</Layout>

<style lang="scss">
  @use '../styles/partials/variables' as *;
  @use '../styles/partials/mixins' as *;

  .page-hero {
    position: relative;
    min-height: 220px;
    overflow: hidden;

    @include respond(md) {
      min-height: 300px;
    }

    &__bg {
      position: absolute;
      inset: 0;
      z-index: 1;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      &::after {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba($color-primary, 0.75);
      }
    }

    &__diagonal {
      position: absolute;
      top: 0;
      left: 0;
      width: 60%;
      height: 100%;
      clip-path: polygon(0 0, 100% 0, 70% 100%, 0 100%);
      z-index: 2;

      @include respond(md) {
        width: 50%;
        clip-path: polygon(0 0, 100% 0, 65% 100%, 0 100%);
      }
    }

    &__curve {
      position: absolute;
      bottom: -1px;
      left: 0;
      right: 0;
      height: 50px;
      background: $color-white;
      z-index: 4;
      clip-path: ellipse(45% 100% at 50% 100%);

      @include respond(md) {
        height: 70px;
        clip-path: ellipse(45% 100% at 50% 100%);
      }
    }

    &__inner {
      @include container;
      padding-block: $space-2xl;
      position: relative;
      z-index: 3;

      @include respond(lg) {
        padding-block: $space-3xl;
      }
    }

    &__content {
      max-width: 400px;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-white;
      margin-bottom: $space-xs;

      &::after {
        content: '';
        display: block;
        width: 48px;
        height: 3px;
        background-color: $color-white;
        margin-top: $space-xs;
      }

      @include respond(md) {
        font-size: $fs-3xl;
      }
    }

    &__breadcrumb {
      display: flex;
      align-items: center;
      gap: $space-xs;
      font-family: $font-body;
      font-size: $fs-sm;
      color: rgba($color-white, 0.85);
      margin-top: $space-xs;

      a {
        color: rgba($color-white, 0.85);
        transition: color $transition-fast;

        &:hover {
          color: $color-white;
        }
      }

      span[aria-current] {
        color: $color-white;
        font-weight: 500;
      }
    }
  }

  .contact-intro {
    background: $color-white;
    padding-block: $space-2xl;
    padding-top: 0;

    &__inner {
      @include container;
      max-width: 700px;
      text-align: center;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-primary;
      margin-bottom: $space-md;

      &::after {
        content: '';
        display: block;
        width: 48px;
        height: 3px;
        background: $color-primary;
        margin: $space-sm auto 0;
      }
    }

    &__text {
      font-family: $font-body;
      font-size: $fs-sm;
      line-height: 1.8;
      color: $color-text-muted;

      @include respond(md) {
        font-size: $fs-base;
      }
    }
  }

  .contact-info {
    background: $color-offwhite;
    padding-block: $space-2xl;

    &__inner {
      @include container;
    }

    &__section-heading {
      font-family: $font-heading;
      font-size: $fs-xl;
      font-weight: 700;
      color: $color-navy;
      text-align: center;
      margin-bottom: $space-lg;
    }

    &__phone-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-md;
      margin-bottom: $space-xl;

      @include respond(md) {
        grid-template-columns: repeat(3, 1fr);
        gap: $space-lg;
      }
    }

    &__other-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-md;

      @include respond(md) {
        grid-template-columns: repeat(2, 1fr);
        gap: $space-lg;
      }
    }
  }

  .phone-card {
    background: $color-white;
    padding: $space-lg;
    border-radius: $radius-md;
    text-align: center;
    border: 1px solid $color-border;
    transition: all $transition-base;
    position: relative;
    overflow: hidden;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
    }

    &--admissions::before {
      background: linear-gradient(90deg, $color-primary, $color-primary-light);
    }

    &--medical::before {
      background: linear-gradient(90deg, #2a9d8f, #52c4b8);
    }

    &--sales::before {
      background: linear-gradient(90deg, #e76f51, #f4a261);
    }

    &:hover {
      border-color: transparent;
      box-shadow: $shadow-lg;
      transform: translateY(-3px);
    }

    &__badge {
      position: absolute;
      top: $space-md;
      right: $space-md;
      padding: 2px $space-sm;
      font-family: $font-body;
      font-size: 11px;
      font-weight: 700;
      color: $color-white;
      background: $color-primary;
      border-radius: 100px;
      letter-spacing: 0.03em;
    }

    &__icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 56px;
      height: 56px;
      border-radius: 50%;
      margin-bottom: $space-sm;
    }

    &--admissions &__icon {
      background: linear-gradient(135deg, rgba($color-primary, 0.08), rgba($color-primary, 0.15));
      color: $color-primary;
    }

    &--medical &__icon {
      background: linear-gradient(135deg, rgba(42, 157, 143, 0.08), rgba(42, 157, 143, 0.15));
      color: #2a9d8f;
    }

    &--sales &__icon {
      background: linear-gradient(135deg, rgba(231, 111, 81, 0.08), rgba(231, 111, 81, 0.15));
      color: #e76f51;
    }

    &__title {
      font-family: $font-heading;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-navy;
      margin-bottom: $space-xs;
    }

    &__desc {
      font-family: $font-body;
      font-size: $fs-xs;
      color: $color-text-muted;
      line-height: 1.5;
      margin-bottom: $space-md;
      min-height: 40px;
    }

    &__number {
      display: inline-block;
      font-family: $font-body;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-primary;
      margin-bottom: $space-sm;
      transition: color $transition-fast;

      &:hover {
        color: $color-primary-dark;
      }
    }

    &__availability {
      font-family: $font-body;
      font-size: $fs-xs;
      color: $color-text-muted;
    }
  }

  .contact-card {
    background: $color-white;
    padding: $space-lg;
    border-radius: $radius-md;
    text-align: center;
    border: 1px solid $color-border;
    transition: all $transition-base;

    &:hover {
      border-color: transparent;
      box-shadow: $shadow-lg;
      transform: translateY(-3px);
    }

    &__icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, rgba($color-primary, 0.08), rgba($color-primary, 0.15));
      border-radius: 50%;
      color: $color-primary;
      margin-bottom: $space-sm;
    }

    &__title {
      font-family: $font-heading;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-navy;
      margin-bottom: $space-xs;
    }

    &__subtitle {
      font-family: $font-body;
      font-size: $fs-xs;
      color: $color-text-muted;
      margin-bottom: $space-sm;
    }

    &__link {
      display: block;
      font-family: $font-body;
      font-size: $fs-base;
      font-weight: 600;
      color: $color-primary;
      margin-bottom: $space-sm;
      transition: color $transition-fast;

      &:hover {
        color: $color-primary-dark;
      }
    }

    &__address {
      font-family: $font-body;
      font-size: $fs-sm;
      font-style: normal;
      color: $color-navy;
      line-height: 1.5;
      margin-bottom: $space-sm;
    }

    &__note {
      font-family: $font-body;
      font-size: $fs-xs;
      color: $color-text-muted;
      line-height: 1.5;
    }
  }

  .map-section {
    background: $color-white;
    padding-block: $space-2xl;

    &__inner {
      @include container;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-xl;
      font-weight: 700;
      color: $color-navy;
      text-align: center;
      margin-bottom: $space-lg;
    }

    &__container {
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-lg;

      @include respond(lg) {
        grid-template-columns: 2fr 1fr;
        gap: $space-xl;
      }
    }

    &__map {
      border-radius: $radius-lg;
      overflow: hidden;
      box-shadow: $shadow-md;

      iframe {
        display: block;
      }
    }

    &__details {
      padding: $space-lg;
      background: $color-offwhite;
      border-radius: $radius-lg;
    }

    &__details-title {
      font-family: $font-heading;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-navy;
      margin-bottom: $space-md;
    }

    &__detail {
      margin-bottom: $space-md;

      &:last-child {
        margin-bottom: 0;
      }

      strong {
        display: block;
        font-family: $font-body;
        font-size: $fs-sm;
        font-weight: 600;
        color: $color-navy;
        margin-bottom: $space-xs;
      }

      p {
        font-family: $font-body;
        font-size: $fs-sm;
        line-height: 1.6;
        color: $color-text-muted;
      }
    }
  }

  .hours-section {
    background: $color-offwhite;
    padding-block: $space-2xl;

    &__inner {
      @include container;
      max-width: 800px;
    }
  }

  .hours-card {
    background: $color-white;
    padding: $space-lg;
    border-radius: $radius-lg;
    box-shadow: $shadow-sm;

    &__title {
      font-family: $font-heading;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-navy;
      text-align: center;
      margin-bottom: $space-lg;
    }

    &__grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-sm;

      @include respond(sm) {
        grid-template-columns: repeat(2, 1fr);
        gap: $space-md;
      }
    }

    &__item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: $space-sm $space-md;
      background: $color-offwhite;
      border-radius: $radius-sm;
    }

    &__label {
      font-family: $font-body;
      font-size: $fs-sm;
      font-weight: 500;
      color: $color-navy;
    }

    &__value {
      font-family: $font-body;
      font-size: $fs-sm;
      color: $color-primary;
      font-weight: 600;
    }
  }

  .cta-section {
    background: linear-gradient(135deg, rgba($color-primary-dark, 0.52), rgba($color-primary, 0.88)), url('/images/waves.png') center / cover no-repeat;
    padding-block: $space-2xl;
    text-align: center;
    position: relative;

    @include respond(lg) {
      padding-block: $space-3xl;
    }

    &__inner {
      @include container;
      position: relative;
      z-index: 2;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-white;
      margin-bottom: $space-xs;

      @include respond(md) {
        font-size: $fs-3xl;
      }
    }

    &__text {
      font-family: $font-body;
      font-size: $fs-sm;
      color: rgba($color-white, 0.85);
      margin-bottom: $space-lg;

      @include respond(md) {
        font-size: $fs-base;
      }
    }

    &__btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: $space-xs;
      padding: $space-sm $space-xl;
      font-family: $font-body;
      font-size: $fs-sm;
      font-weight: 600;
      color: $color-primary;
      background-color: $color-white;
      border-radius: $radius-sm;
      transition: all $transition-base;

      &:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      }
    }
  }
</style>