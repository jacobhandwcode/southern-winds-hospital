<style lang="scss">
  @use '../styles/partials/variables' as *;
  @use '../styles/partials/mixins' as *;

  .page-hero {
    position: relative;
    min-height: 220px;
    overflow: hidden;

    @include respond(md) {
      min-height: 300px;
    }

    &__bg {
      position: absolute;
      inset: 0;
      z-index: 1;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      &::after {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba($color-primary, 0.75);
      }
    }

    &__diagonal {
      position: absolute;
      top: 0;
      left: 0;
      width: 60%;
      height: 100%;
      clip-path: polygon(0 0, 100% 0, 70% 100%, 0 100%);
      z-index: 2;

      @include respond(md) {
        width: 50%;
        clip-path: polygon(0 0, 100% 0, 65% 100%, 0 100%);
      }
    }

    &__curve {
      position: absolute;
      bottom: -1px;
      left: 0;
      right: 0;
      height: 50px;
      background: $color-white;
      z-index: 4;
      clip-path: ellipse(45% 100% at 50% 100%);

      @include respond(md) {
        height: 70px;
        clip-path: ellipse(45% 100% at 50% 100%);
      }
    }

    &__inner {
      @include container;
      padding-block: $space-2xl;
      position: relative;
      z-index: 3;

      @include respond(lg) {
        padding-block: $space-3xl;
      }
    }

    &__content {
      max-width: 400px;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-white;
      margin-bottom: $space-xs;

      &::after {
        content: '';
        display: block;
        width: 48px;
        height: 3px;
        background-color: $color-white;
        margin-top: $space-xs;
      }

      @include respond(md) {
        font-size: $fs-3xl;
      }
    }

    &__breadcrumb {
      display: flex;
      align-items: center;
      gap: $space-xs;
      font-family: $font-body;
      font-size: $fs-sm;
      color: rgba($color-white, 0.85);
      margin-top: $space-xs;

      a {
        color: rgba($color-white, 0.85);
        transition: color $transition-fast;

        &:hover {
          color: $color-white;
        }
      }

      span[aria-current] {
        color: $color-white;
        font-weight: 500;
      }
    }
  }

  .intro {
    background: $color-white;
    padding-block: $space-2xl;
    padding-top: $space-lg;

    &__inner {
      @include container;
      max-width: 800px;
    }

    &__text {
      font-family: $font-body;
      font-size: $fs-sm;
      line-height: 1.8;
      color: $color-text-muted;
      margin-bottom: $space-md;

      &:last-child {
        margin-bottom: 0;
      }

      @include respond(md) {
        font-size: $fs-base;
      }
    }
  }

  .plans-section {
    background: $color-offwhite;
    padding-block: $space-2xl;

    @include respond(lg) {
      padding-block: $space-3xl;
    }

    &__inner {
      @include container;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-navy;
      text-align: center;
      margin-bottom: $space-md;

      &::after {
        content: '';
        display: block;
        width: 48px;
        height: 3px;
        background: $color-primary;
        margin: $space-sm auto 0;
      }
    }

    &__intro {
      max-width: 800px;
      margin: 0 auto $space-xl;
      text-align: center;

      p {
        font-family: $font-body;
        font-size: $fs-sm;
        line-height: 1.7;
        color: $color-text-muted;
        margin-bottom: $space-sm;

        &:last-child {
          margin-bottom: 0;
        }
      }

      a {
        color: $color-primary;
        font-weight: 600;
        text-decoration: underline;
        text-underline-offset: 2px;

        &:hover {
          color: $color-primary-dark;
        }
      }
    }

    &__guide-link {
      display: inline-flex;
      align-items: center;
      gap: $space-xs;
    }
  }

  .plans-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: $space-lg;

    @include respond(md) {
      grid-template-columns: repeat(2, 1fr);
    }

    @include respond(lg) {
      grid-template-columns: repeat(3, 1fr);
    }

    &__column {
      background: $color-white;
      border-radius: $radius-md;
      padding: $space-md;
      border: 1px solid $color-border;
    }
  }

  .plans-list {
    list-style: none;
    padding: 0;
    margin: 0;

    &__item {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      padding: $space-sm 0;
      border-bottom: 1px solid $color-border;

      &:last-child {
        border-bottom: none;
      }

      &--parent {
        flex-direction: column;
        align-items: flex-start;
      }
    }

    &__name {
      font-family: $font-body;
      font-size: $fs-sm;
      font-weight: 500;
      color: $color-navy;
      flex: 1;
      padding-right: $space-sm;
    }

    &__link {
      font-family: $font-body;
      font-size: $fs-xs;
      font-weight: 600;
      color: $color-primary;
      transition: color $transition-fast;

      &:hover {
        color: $color-primary-dark;
        text-decoration: underline;
      }
    }

    &__sub {
      width: 100%;
      list-style: none;
      padding: $space-xs 0 0 $space-md;
      margin-top: $space-xs;
      border-top: 1px dashed $color-border;

      li {
        font-family: $font-body;
        font-size: $fs-xs;
        color: $color-text-muted;
        padding: $space-xs 0;
        position: relative;
        padding-left: $space-sm;

        &::before {
          content: '–';
          position: absolute;
          left: 0;
          color: $color-primary;
        }
      }
    }
  }

  .help-section {
    background: $color-white;
    padding-block: $space-2xl;

    &__inner {
      @include container;
      max-width: 600px;
    }
  }

  .help-card {
    background: linear-gradient(135deg, rgba($color-primary, 0.04), rgba($color-primary, 0.08));
    border: 1px solid rgba($color-primary, 0.15);
    border-radius: $radius-lg;
    padding: $space-xl;
    text-align: center;

    &__icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 64px;
      height: 64px;
      background: $color-white;
      border-radius: 50%;
      color: $color-primary;
      margin-bottom: $space-md;
      box-shadow: $shadow-sm;
    }

    &__title {
      font-family: $font-heading;
      font-size: $fs-xl;
      font-weight: 700;
      color: $color-navy;
      margin-bottom: $space-sm;
    }

    &__text {
      font-family: $font-body;
      font-size: $fs-sm;
      line-height: 1.7;
      color: $color-text-muted;
      margin-bottom: $space-lg;
    }

    &__btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: $space-xs;
      padding: $space-sm $space-xl;
      font-family: $font-body;
      font-size: $fs-sm;
      font-weight: 600;
      color: $color-white;
      background: $color-primary;
      border-radius: $radius-sm;
      transition: all $transition-base;

      &:hover {
        background: $color-primary-dark;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba($color-primary, 0.3);
      }
    }
  }

  .cta-section {
    background: linear-gradient(135deg, rgba($color-primary-dark, 0.52), rgba($color-primary, 0.88)), url('/images/waves.png') center / cover no-repeat;
    padding-block: $space-2xl;
