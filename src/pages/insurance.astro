      }
    }

    &__text {
      font-family: $font-body;
      font-size: $fs-sm;
      color: rgba($color-white, 0.85);
      margin-bottom: $space-lg;

      @include respond(md) {
        font-size: $fs-base;
      }
    }

    &__btn {
      display: inline-flex;
