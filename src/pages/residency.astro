<style lang="scss">
  @use '../styles/partials/variables' as *;
  @use '../styles/partials/mixins' as *;

  .page-hero {
    position: relative;
    min-height: 220px;
    overflow: hidden;

    @include respond(md) {
      min-height: 300px;
    }

    &__bg {
      position: absolute;
      inset: 0;
      z-index: 1;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      &::after {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba($color-primary, 0.75);
      }
    }

    &__diagonal {
      position: absolute;
      top: 0;
      left: 0;
      width: 60%;
      height: 100%;
      clip-path: polygon(0 0, 100% 0, 70% 100%, 0 100%);
      z-index: 2;

      @include respond(md) {
        width: 50%;
        clip-path: polygon(0 0, 100% 0, 65% 100%, 0 100%);
      }
    }

    &__curve {
      position: absolute;
      bottom: -1px;
      left: 0;
      right: 0;
      height: 50px;
      background: $color-white;
      z-index: 4;
      clip-path: ellipse(45% 100% at 50% 100%);

      @include respond(md) {
        height: 70px;
        clip-path: ellipse(45% 100% at 50% 100%);
      }
    }

    &__inner {
      @include container;
      padding-block: $space-2xl;
      position: relative;
      z-index: 3;

      @include respond(lg) {
        padding-block: $space-3xl;
      }
    }

    &__content {
      max-width: 400px;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-white;

      &::after {
        content: '';
        display: block;
        width: 48px;
        height: 3px;
        background-color: $color-white;
        margin-top: $space-xs;
      }

      @include respond(md) {
        font-size: $fs-3xl;
      }
    }

    &__breadcrumb {
      display: flex;
      align-items: center;
      gap: $space-xs;
      font-family: $font-body;
      font-size: $fs-sm;
      color: rgba($color-white, 0.85);
      margin-top: $space-xs;

      a {
        color: rgba($color-white, 0.85);
        transition: color $transition-fast;

        &:hover {
          color: $color-white;
        }
      }

      span[aria-current] {
        color: $color-white;
        font-weight: 500;
      }
    }
  }

  .editor-section {
    background: $color-white;
    padding-block: $space-2xl;

    &__inner {
      @include container;
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-lg;
      align-items: center;

      @include respond(md) {
        grid-template-columns: 200px 1fr;
        gap: $space-xl;
      }
    }

    &__image {
      width: 160px;
      height: 160px;
      border-radius: 50%;
      overflow: hidden;
      margin: 0 auto;
      border: 4px solid $color-primary;

      @include respond(md) {
        width: 200px;
        height: 200px;
        margin: 0;
      }

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__label {
      display: block;
      font-family: $font-body;
      font-size: $fs-xs;
      font-weight: 600;
      color: $color-primary;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: $space-xs;
    }

    &__name {
      font-family: $font-heading;
      font-size: $fs-xl;
      font-weight: 700;
      color: $color-navy;
      margin-bottom: $space-xs;
    }

    &__title {
      font-family: $font-body;
      font-size: $fs-sm;
      font-weight: 500;
      color: $color-text-muted;
      margin-bottom: $space-sm;
