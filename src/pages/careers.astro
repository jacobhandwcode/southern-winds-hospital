---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Careers â€” Southern Winds Hospital" hideFooterCta>

  <section class="page-hero">
    <div class="page-hero__bg">
      <img src="/images/admissions-hero.png" alt="" loading="eager" />
    </div>
    <div class="page-hero__diagonal"></div>
    <div class="page-hero__curve"></div>
    <div class="page-hero__inner">
      <div class="page-hero__content">
        <h1 class="page-hero__heading">Careers</h1>
        <nav class="page-hero__breadcrumb" aria-label="Breadcrumb">
          <a href="/">Home</a>
          <span>/</span>
          <span aria-current="page">Careers</span>
        </nav>
      </div>
    </div>
  </section>

  <section class="iframe-section">
    <div class="iframe-section__inner">
      <iframe 
        id="inlineframe" 
        title="Career Site" 
        src="https://southernwindshospital.hrmdirect.com/employment/job-openings.php?nohd" 
        name="HRM Direct Career Site iFrame" 
        width="100%" 
        height="500" 
        frameborder="0" 
        sandbox="allow-top-navigation allow-scripts allow-forms allow-popups allow-same-origin">
      </iframe>
    </div>
  </section>

</Layout>

<style lang="scss">
  @use '../styles/partials/variables' as *;
  @use '../styles/partials/mixins' as *;

  .page-hero {
    position: relative;
    min-height: 220px;
    overflow: hidden;

    @include respond(md) {
      min-height: 300px;
    }

    &__bg {
      position: absolute;
      inset: 0;
      z-index: 1;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      &::after {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba($color-primary, 0.75);
      }
    }

    &__diagonal {
      position: absolute;
      top: 0;
      left: 0;
      width: 60%;
      height: 100%;
      clip-path: polygon(0 0, 100% 0, 70% 100%, 0 100%);
      z-index: 2;

      @include respond(md) {
        width: 50%;
        clip-path: polygon(0 0, 100% 0, 65% 100%, 0 100%);
      }
    }

    &__curve {
      position: absolute;
      bottom: -1px;
      left: 0;
      right: 0;
      height: 50px;
      background: $color-white;
      z-index: 4;
      clip-path: ellipse(45% 100% at 50% 100%);

      @include respond(md) {
        height: 70px;
        clip-path: ellipse(45% 100% at 50% 100%);
      }
    }

    &__inner {
      @include container;
      padding-block: $space-2xl;
      position: relative;
      z-index: 3;

      @include respond(lg) {
        padding-block: $space-3xl;
      }
    }

    &__content {
      max-width: 400px;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-white;
      margin-bottom: $space-xs;

      &::after {
        content: '';
        display: block;
        width: 48px;
        height: 3px;
        background-color: $color-white;
        margin-top: $space-xs;
      }

      @include respond(md) {
        font-size: $fs-3xl;
      }
    }

    &__breadcrumb {
      display: flex;
      align-items: center;
      gap: $space-xs;
      font-family: $font-body;
      font-size: $fs-sm;
      color: rgba($color-white, 0.85);
      margin-top: $space-xs;

      a {
        color: rgba($color-white, 0.85);
        transition: color $transition-fast;

        &:hover {
          color: $color-white;
        }
      }

      span[aria-current] {
        color: $color-white;
        font-weight: 500;
      }
    }
  }

  .contact-intro {
    background: $color-white;
    padding-block: $space-2xl;
    padding-top: 0;

    &__inner {
      @include container;
      max-width: 700px;
      text-align: center;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-primary;
      margin-bottom: $space-md;

      &::after {
        content: '';
        display: block;
        width: 48px;
        height: 3px;
        background: $color-primary;
        margin: $space-sm auto 0;
      }
    }

    &__text {
      font-family: $font-body;
      font-size: $fs-sm;
      line-height: 1.8;
      color: $color-text-muted;

      @include respond(md) {
        font-size: $fs-base;
      }
    }
  }

  .contact-info {
    background: $color-offwhite;
    padding-block: $space-2xl;

    &__inner {
      @include container;
    }

    &__grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-md;

      @include respond(md) {
        grid-template-columns: repeat(3, 1fr);
        gap: $space-lg;
      }
    }
  }

  .contact-card {
    background: $color-white;
    padding: $space-lg;
    border-radius: $radius-md;
    text-align: center;
    border: 1px solid $color-border;
    transition: all $transition-base;

    &:hover {
      border-color: transparent;
      box-shadow: $shadow-lg;
      transform: translateY(-3px);
    }

    &__icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, rgba($color-primary, 0.08), rgba($color-primary, 0.15));
      border-radius: 50%;
      color: $color-primary;
      margin-bottom: $space-sm;
    }

    &__title {
      font-family: $font-heading;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-navy;
      margin-bottom: $space-xs;
    }

    &__subtitle {
      font-family: $font-body;
      font-size: $fs-xs;
      color: $color-text-muted;
      margin-bottom: $space-sm;
    }

    &__link {
      display: block;
      font-family: $font-body;
      font-size: $fs-base;
      font-weight: 600;
      color: $color-primary;
      margin-bottom: $space-sm;
      transition: color $transition-fast;

      &:hover {
        color: $color-primary-dark;
      }
    }

    &__address {
      font-family: $font-body;
      font-size: $fs-sm;
      font-style: normal;
      color: $color-navy;
      line-height: 1.5;
      margin-bottom: $space-sm;
    }

    &__note {
      font-family: $font-body;
      font-size: $fs-xs;
      color: $color-text-muted;
      line-height: 1.5;
    }
  }

  .map-section {
    background: $color-white;
    padding-block: $space-2xl;

    &__inner {
      @include container;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-xl;
      font-weight: 700;
      color: $color-navy;
      text-align: center;
      margin-bottom: $space-lg;
    }

    &__container {
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-lg;

      @include respond(lg) {
        grid-template-columns: 2fr 1fr;
        gap: $space-xl;
      }
    }

    &__map {
      border-radius: $radius-lg;
      overflow: hidden;
      box-shadow: $shadow-md;

      iframe {
        display: block;
      }
    }

    &__details {
      padding: $space-lg;
      background: $color-offwhite;
      border-radius: $radius-lg;
    }

    &__details-title {
      font-family: $font-heading;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-navy;
      margin-bottom: $space-md;
    }

    &__detail {
      margin-bottom: $space-md;

      &:last-child {
        margin-bottom: 0;
      }

      strong {
        display: block;
        font-family: $font-body;
        font-size: $fs-sm;
        font-weight: 600;
        color: $color-navy;
        margin-bottom: $space-xs;
      }

      p {
        font-family: $font-body;
        font-size: $fs-sm;
        line-height: 1.6;
        color: $color-text-muted;
      }
    }
  }

  .hours-section {
    background: $color-offwhite;
    padding-block: $space-2xl;

    &__inner {
      @include container;
      max-width: 800px;
    }
  }

  .hours-card {
    background: $color-white;
    padding: $space-lg;
    border-radius: $radius-lg;
    box-shadow: $shadow-sm;

    &__title {
      font-family: $font-heading;
      font-size: $fs-lg;
      font-weight: 700;
      color: $color-navy;
      text-align: center;
      margin-bottom: $space-lg;
    }

    &__grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: $space-sm;

      @include respond(sm) {
        grid-template-columns: repeat(2, 1fr);
        gap: $space-md;
      }
    }

    &__item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: $space-sm $space-md;
      background: $color-offwhite;
      border-radius: $radius-sm;
    }

    &__label {
      font-family: $font-body;
      font-size: $fs-sm;
      font-weight: 500;
      color: $color-navy;
    }

    &__value {
      font-family: $font-body;
      font-size: $fs-sm;
      color: $color-primary;
      font-weight: 600;
    }
  }

  .cta-section {
    background: linear-gradient(135deg, rgba($color-primary-dark, 0.52), rgba($color-primary, 0.88)), url('/images/waves.png') center / cover no-repeat;
    padding-block: $space-2xl;
    text-align: center;
    position: relative;

    @include respond(lg) {
      padding-block: $space-3xl;
    }

    &__inner {
      @include container;
      position: relative;
      z-index: 2;
    }

    &__heading {
      font-family: $font-heading;
      font-size: $fs-2xl;
      font-weight: 700;
      color: $color-white;
      margin-bottom: $space-xs;

      @include respond(md) {
        font-size: $fs-3xl;
      }
    }

    &__text {
      font-family: $font-body;
      font-size: $fs-sm;
      color: rgba($color-white, 0.85);
      margin-bottom: $space-lg;

      @include respond(md) {
        font-size: $fs-base;
      }
    }

    &__btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: $space-xs;
      padding: $space-sm $space-xl;
      font-family: $font-body;
      font-size: $fs-sm;
      font-weight: 600;
      color: $color-primary;
      background-color: $color-white;
      border-radius: $radius-sm;
      transition: all $transition-base;

      &:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      }
    }
  }
</style>